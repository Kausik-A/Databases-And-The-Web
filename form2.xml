<?xml version = "1.0"?> 
<?xml-stylesheet type="text/xsl" href="form.xsl"?>
<dataInputForm id="2">
<title> 
  <caption>Student Interests Page</caption>
</title>
  
<textbox datatype="integer" key="key">
  <name>sid</name> 
  <caption>Student ID:</caption>
  <size>4</size>
  <maxlength>4</maxlength>
</textbox>

<break></break>

<textbox datatype="string">
  <name>sname</name> 
  <caption>Student Name:</caption>
  <size>20</size>
  <maxlength>50</maxlength>
</textbox>

<break></break>

<checkboxes>
  <name>courseno</name> 
  <caption>Check programming languages you are interested in.</caption>
  <break></break>
  <checkboxgroup>
    <checkbox>
      <value>Java</value>
      <caption>Java</caption>
    </checkbox>   
    <break></break>
    <checkbox>
      <value>C++</value> 
      <caption>C++</caption>
    </checkbox>   
    <break></break>
    <checkbox>
      <value>Pascal</value> 
      <caption>Pascal</caption>
    </checkbox>   
  </checkboxgroup>
</checkboxes>

<break></break>
<break></break>

<select>
  <name>status</name>
  <caption>What is your degree?</caption>
  <options>
    <option>
      <value>ms</value>
      <caption>MS</caption>
    </option>
    <option>
      <value>phd</value>
      <caption>PhD</caption>
    </option>
  </options>
</select>

<break></break>
<break></break>     

<multiselect>
  <name>hobbies</name>
  <caption>What are your hobbies (choose as many as relevant)?</caption>
  <size>5</size>
  <options>
    <option>
      <value>sp</value>
      <caption>Sports</caption>
    </option>
    <option>
      <value>sc</value>
      <caption>Stamp Collection</caption>
    </option>
    <option>
      <value>cc</value>
      <caption>Coin Collection</caption>
    </option>
    <option>
      <value>rd</value>
      <caption>Reading</caption>
    </option>
    <option>
      <value>cp</value>
      <caption>Crossword Puzzles</caption>
    </option>
    <option>
      <value>pt</value>
      <caption>Painting</caption>
    </option>
    <option>
      <value>sg</value>
      <caption>Screen Printing</caption>
    </option>
  </options>
</multiselect>

<break></break>
<break></break>     

<submit>
  <caption>Click Here</caption>
</submit>

</dataInputForm>
